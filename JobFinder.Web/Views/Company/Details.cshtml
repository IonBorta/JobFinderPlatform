                    <div class="col">
                        <h3>@Html.DisplayFor(model => model.Name)</h3>
                        <h6><a asp-controller="Job" asp-action="Jobs" asp-route-companyId="@Model.Id" class="link-danger">@Model.Jobs disponible jobs </a></h6>
                        <a asp-controller="Job" asp-action="AddJob" asp-route-id="@Model.Id" class="link-primary">Add a Job </a>
                    </div>
                </div>

                <!-- Edit Icon at the end of the row -->
                <div>
                    <form asp-action="Edit" asp-controller="Company" asp-route-id="@Model.Id" method="get">
